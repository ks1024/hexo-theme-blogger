<div class="sidebar-module">
  <% if (theme.google_search){ %>
    <form action="//google.com/search" method="get" accept-charset="utf-8" class="search-form", target="_blank">
      <input type="search" name="q" results="0" placeholder="Search">
      <input type="hidden" name="q" value="site:<%- config.url %>">
    </form>
  <% } %>
  <% if (theme.baidu_search){ %>
    <form action="//baidu.com/baidu" method="get", accept-charset="utf-8" class="search-form" target="_blank">
      <input type="search" name="word" placeholder="Search">
      <input type="hidden" name="si" value="<%- config.url %>">
      <input type="hidden" name="tn" value="bds">
      <input type="hidden" name="cl" value="3">
      <input type="hidden" name="ct" value="2097152">
      <input type="hidden" name="s" value="on">
    </form>
  <% } %>
</div>

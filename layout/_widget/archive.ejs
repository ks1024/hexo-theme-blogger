<% if (site.posts.length){ %>
  <div class="sidebar-module archive">
    <div class="tab">
    <i class="material-icons">archive</i>
      <h2 data-toggle="collapse" data-target="#collapseArchive" aria-expanded="false" aria-controls="collapseArchive">
        Archives
      </h2>
      <i class="material-icons right">keyboard_arrow_down</i>
    </div>
    <div class="collapse" id="collapseArchive">
      <%- list_archives({show_count: theme.show_count, type: theme.archive_type, class: 'sidebar-module'}) %>
    </div>
  </div>
<% } %>

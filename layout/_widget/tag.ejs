<% if (site.tags.length){ %>
  <div class="sidebar-module tag">
    <div class="tab">
      <i class="material-icons">label</i>
      <h2 data-toggle="collapse" data-target="#collapseTag" aria-expanded="false" aria-controls="collapseTag">
        Labels
      </h2>
      <i class="material-icons right">keyboard_arrow_down</i>
    </div>
    <div class="content collapse" id="collapseTag">
        <%- list_tags({show_count: theme.show_count, class: 'sidebar-module'}) %>
    </div>
  </div>
<% } %>
